		//div(ng-if='user && listUserFollowing.length > 0')
			hr
			.row.list-room-schedule-following
				.col-md-12 Lịch phát sóng Idol của bạn
				.col-md-12
					ul.list-inline
						li.list-inline-item(ng-repeat='item in listUserFollowing')
							.image-idol
								img.img-responsive.image-idol(src='{{item.User.avatars_path.avatar}}')
								button
									i.fa.fa-angle-right
							p.text-center.name-idol {{item.name || item.title}}
