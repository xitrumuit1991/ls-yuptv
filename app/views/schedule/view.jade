.container
	.schedule.wrapper
		.row
			.col-md-6
				h2.head-title LỊCH DIỄN
				p Cập nhật ngày 10/10/2017
			.col-md-6.text-right
				span.label.black Hiển thị
				//#category
				select.form-control(ng-model="categorySelected"
				ng-options="item.id as item.title for item in selectCategoryValue")

				select.form-control(ng-model="dateSelected"
				ng-options="item.id as item.title for item in selectDateValue")

				select.form-control(ng-model="monthSelected"
				ng-options="item.id as item.title for item in selectMonthValue")

				button.btn-search
					i.fa.fa-search
		hr
		.row
			.col-md-6
				h4 {{textNowDate}}
				.row
					.col-md-12
						table.table.table-bordered
							tr
								td(width='50%') Idol diễn
								td(width='50%') Giờ diễn
							tr(ng-if='!roomAtNowDate || roomAtNowDate.length <= 0')
								td(colspan='2') Không có lịch diễn nào
							tr(ng-repeat='item in roomAtNowDate' ng-if='roomAtNowDate.length > 0')
								td(style='border-right: none;')
									.group-image-name
										img.img-responsive(src='{{item.Room.User.avatars_path.avatar}}')
										.name
											p {{item.Room.title}}
											i.fa.fa-eye
											span {{item.Room.views}}
											i.fa.fa-heart-o
											span {{item.Room.hearts}}
								td(style='border-left: none;')
									.group-time-follow
										.time.bold {{item.start | date:'HH:mm' }}
										.follow
											button(ng-if='item.Room.isFollow==false') Theo dõi


			.col-md-6
				h4 {{textTomorrowDate}}
				.row
					.col-md-12
						table.table.table-bordered
							tr
								td(width='60%') Idol diễn
								td(width='40%') Giờ diễn
							tr(ng-if='!roomAtTomorrowDate || roomAtTomorrowDate.length <= 0')
								td(colspan='2') Không có lịch diễn nào
							tr(ng-repeat='item in roomAtTomorrowDate' ng-if='roomAtTomorrowDate.length > 0')
								td(style='border-right: none;')
									.group-image-name
										img.img-responsive(src='{{item.Room.User.avatars_path.avatar}}')
										.name
											p {{item.Room.title}}
											i.fa.fa-eye
											span {{item.Room.views}}
											i.fa.fa-heart-o
											span {{item.Room.hearts}}
								td(style='border-left: none;')
									.group-time-follow
										.time.bold {{item.start | date:'HH:mm' }}
										.follow
											button(ng-if='item.Room.isFollow==false') Theo dõi


		.list-room-schedule-following(ng-if='user && listUserFollowing.length > 0')
			.row
				.col-md-12
					hr
				.col-md-12
					h3 Lịch phát sóng Idol của bạn
					br
					br
				.col-md-12
					ui-carousel(slides='listUserFollowing',
					slides-to-show='7',
					slides-to-scroll='7',
					initial-slide='1',
					autoplay='true',
					autoplay-speed='4000',
					dots='true')
						carousel-item
							.image-idol
								img.img-responsive.image-idol(src='{{item.User.avatars_path.avatar}}')
								button
									i.fa.fa-angle-right
							p.text-center.name-idol {{item.name || item.title}}
