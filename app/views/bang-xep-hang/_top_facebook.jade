	.row
		.col-md-12.text-center.item-first(ng-if='rankFacebook[0]')
			.top
				img(src='{{rankFacebook[0].User.avatars_path.w160h160}}')
			.name.text-center {{rankFacebook[0].User.name}}
			.icon.text-center
				i.fa.fa-heart-o
				span {{rankFacebook[0].User.Room.views}}
