.home-slider
	ui-carousel(slides='slides',
	slides-to-show='3',
	slides-to-scroll='1',
	initial-slide='1',
	autoplay='true',
	autoplay-speed='3000',
	dots='true')
		carousel-item
			img.img-responsive(src='{{ item.image }}', alt='{{ item.text }}')
			//h3  {{ item.text }}
		carousel-prev
			button
				i.fa.fa-angle-left
		carousel-next
			button
				i.fa.fa-angle-right
	.download-link
		.row
			.col-md-6.ios.text-right
				a(href="")
					i.fa.fa-apple
					| &nbsp; Tải IOS App
			.col-md-6.android.text-left
				a(href="")
					i.fa.fa-android
					| &nbsp; Tải Android App


