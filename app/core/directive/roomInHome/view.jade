.directive-room-in-home-category
	.item
		a(ui-sref='base.room-detail({id : room.id})')
			img.item-image(src='{{room.banner || room.background || room.User.avatar || "/images/default_room.png" }}')
		.item-group
			.item-title
				a(ui-sref='base.room-detail({id : room.id})')
					p.title {{room.title || room.User.name }}
				.icons
					i.fa.fa-eye
					span.value {{room.views | thousandSuffix : 1 }} &nbsp;&nbsp;
					i.fa.fa-heart
					span.value {{room.hearts | thousandSuffix : 1 }}

			.item-favorite.pointer(
			ng-if='room.isFollow == false && room.id != user.Room.id '
			ng-click='homeClickFollowIdol(room, groupIdol.id, indexRoom)')
				i.fa.fa-plus-circle
			.item-favorite.pointer(
			ng-if='room.isFollow == true && room.id != user.Room.id'
			ng-click='homeClickunFollowIdol(room, groupIdol.id, indexRoom)')
				i.fa.fa-minus-circle